Object subclass: #JuegoRPS	instanceVariableNames: 'jugador computadora'	classVariableNames: ''	poolDictionaries: ''	category: 'RPS'!!JuegoRPS methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:23'!evaluar: jug contra: comp    (jug = comp) ifTrue: [^ '¡Empate!!'].    ((jug = 'piedra' and: [comp = 'tijera']) or:     (jug = 'papel' and: [comp = 'piedra']) or:     (jug = 'tijera' and: [comp = 'papel']))        ifTrue: [^ '¡Ganaste, humano honorable!!'].    ^ 'Has sido vencido por la IA... ¡intenta de nuevo!!'.! !!JuegoRPS methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:22'!inicializarJugadores    jugador := Jugador new.    jugador nombre: 'Jugador Humano'.    jugador elegir.    computadora := Jugador new.    computadora nombre: 'IA Computadora'.    computadora eleccion: (#('piedra' 'papel' 'tijera') atRandom).! !!JuegoRPS methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:23'!jugar    | resultado |    self inicializarJugadores.    jugador mostrarEleccion.    computadora mostrarEleccion.    resultado := self evaluar: jugador obtenerEleccion contra: computadora obtenerEleccion.    Transcript cr; show: resultado; flush.! !Object subclass: #Jugador	instanceVariableNames: 'nombre eleccion'	classVariableNames: ''	poolDictionaries: ''	category: 'RPS'!!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:07'!eleccion: unaEleccion    eleccion := unaEleccion.! !!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:35'!elegir    | opciones entrada |    Transcript show: 'Entrando a elegir...'; cr.    opciones := #('piedra' 'papel' 'tijera').    entrada := (UIManager default request: nombre , ', elige: piedra, papel o tijera') asLowercase.    (opciones includes: entrada)        ifTrue: [self eleccion: entrada]        ifFalse: [            Transcript show: 'Elección inválida. Se asignará piedra por defecto.'; cr.            self eleccion: 'piedra'        ].! !!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:15'!mostrarEleccion    Transcript show: nombre , ' eligió: ', eleccion; cr.! !!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:06'!nombre: unNombre    nombre := unNombre.! !!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:15'!obtenerEleccion    ^ eleccion.! !!Jugador methodsFor: 'as yet unclassified' stamp: 'class 6/18/2025 23:07'!obtenerNombre    ^ nombre.! !